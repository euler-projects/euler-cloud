        <dependency>
            <groupId>org.eulerframework</groupId>
            <artifactId>euler-web-oauth2-util</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <version>RELEASE</version>
