    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>euler-cloud-starter</artifactId>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.eulerframework.cloud</groupId>
                <artifactId>euler-cloud-euler-framework-dependencies</artifactId>
                <version>${project.version}</version>
                <type>pom</type>
                <scope>import</scope>
